<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/videoGameTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Game Theme"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/golfTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golf Theme"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/oldSchoolTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old School"
            android:textSize="20sp" />
    </RadioGroup>

    <Switch
        android:id="@+id/speed_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Double Speed"
        android:textSize="20sp" />
</RelativeLayout>